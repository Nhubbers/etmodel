.page
  %h1= I18n.t(@area.area)
  %ul.dataset-info
    %li
      = I18n.t("dataset.present_year")
      %span= @area.analysis_year

    - if @area.last_updated_at
      %li
        = I18n.t("dataset.last_updated")
        %span
          = time_ago_in_words(DateTime.parse(@area.last_updated_at))
          = I18n.t("datetime.distance_in_words.ago")

  .clearfix

  = link_to I18n.t("dataset.start_scenario"), root_path(country: @area.area), class: "button primary"
